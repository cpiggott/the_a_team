<div class="list-group" style="padding-right:5px">
<% if @keyword %>
  <% for r in @results%>
  <a class="list-group-item list-group-item-success" href="" data-toggle="modal" data-target="#emp<%=r.id%>" style="color:#7031BE;"><h4><%=r.position%> - <%=r.company%> - <%=r.id%></h4></a>
  <% end %>
<% else %>

  <% for r in @results %>
    <a class="list-group-item list-group-item-success" href="" data-toggle="modal" data-target="#emp<%=r.id%>" style="color:#7031BE;"><h4><%=r.position%> - <%=r.company%> - <%=r.id%></h4></a>
  <% end %>
  
<% end %>
</div>


<!-- Modal -->
<% for e in Employment.all %>
<div class="modal fade" id="emp<%=e.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"><%=e.position%> - <%=e.company%></h4>
      </div>
      <div class="modal-body">
        <h6><%=simple_format(e.description)%></h6>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<% end %>