
<div class="container">
<h3>Staff</h3>	
	
		<div class="row">
			<div class="col-md-12">
		
			<% for c in Staff.all.sort_by!{ |m| m.name.downcase} %>
			
				<div class="col-md-4" style="padding-bottom:5px padding-bottom:10px">
					<div class="thumbnail">
						<img alt="300x200" src="<%= c.image %>" />
						<div class="caption">
							<h3>
								<%= c.name%>
							</h3>
							<p>
								<%= c.description %>
							</p>
							<p>
							<% if c.cis_page.present? %>
								<a class="btn btn-primary" href="<%= c.cis_page %>">CIS Page</a> 
							<%else %>
							<%end%>
							<% if c.personal_page.present? %>
								<a class="btn btn-primary" href="<%= c.personal_page %>">Personal Page</a>
							<%else %>
							<%end%>
							</p>
						</div>
					</div>
				</div>
				<p></p>
				
			
			<% end %>
			</div>
		</div>
			
		
	
	
</div>