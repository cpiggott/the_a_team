<h3>Classes</h3>
<div class="panel-group" id="accordion22" padding-top="10px">
	<% for c in Course.find(:all, :order=>'number') %>
		  <div class="panel panel-default" >
			<div class="panel-heading" style="background:white">
			  <h4 class="panel-title" style="color:#7031BE">
				<a data-toggle="collapse" data-parent="#accordion22" href="#collapseclass<%= c.id %>">
				  <h4><%=c.number %> - <%= c.name %></h4>
				</a>
			  </h4>
			</div>
			<div id="collapseclass<%=c.id%>" class="panel-collapse collapse">
			  <div class="panel-body">
				<h6><%= simple_format(c.description) %></h6>
			  </div>
			</div>
		  </div>
	<% end %>
</div>