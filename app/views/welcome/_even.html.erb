<div class="container">
<h1>Calendar</h1>
<p> Calendar of Events sorted by day. </p>
	<div class="row clearfix" padding-top="10px">
		<div class="row" padding-top="10px">
		<div class="row">
			<% for c in Event.all %>
			
				<div class="col-md-4">
					<div class="thumbnail">
						<div class="caption">
							<h3>
								<%= c.name%>
							</h3>
							
								<%= c.date %>
							</p>
							<p>
								<%= c.description %>
							</p>
							<p>
								<%= c.location %>
							</p>
							
						</div>
					</div>
				</div>
				<p></p>
				
			
			<% end %>
			</div>
		</div>
	</div>
	
	
</div>